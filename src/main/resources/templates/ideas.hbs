{{#partial "content"}}

    <h1>List of Ideas</h1>
    <ul>
        {{#each ideas}}
            <li><form action="/ideas/{{slug}}/vote" method="post">
                {{courseTitle}}  <button>Vote</button> ({{voteCount}})
            </form></li>
        {{/each}}
    </ul>

    <form action="/ideas" method="post">
        <input type="text" placeholder="Course Name" name="courseName">
        <button>Add Idea</button>
    </form>

{{/partial}}

{{> base.hbs}}